# ==============================================
# OLT Polling Server Configuration
# ==============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#   nano .env

# ==============================================
# Supabase Configuration (REQUIRED)
# ==============================================
# Get these from YOUR Supabase Dashboard:
# https://supabase.com/dashboard/project/YOUR_PROJECT_ID/settings/api

SUPABASE_URL=https://your-project.supabase.co
# Service key is required for admin operations (password reset, user management)
SUPABASE_SERVICE_KEY=your-service-role-key-here

# ==============================================
# Polling Configuration
# ==============================================
POLLING_INTERVAL_MS=60000
SSH_TIMEOUT_MS=60000
MIKROTIK_TIMEOUT_MS=30000
API_TIMEOUT_MS=30000

# ==============================================
# Server Configuration
# ==============================================
PORT=3001
NODE_ENV=production

# ==============================================
# Custom Domain SSL Configuration
# ==============================================
# Email for Let's Encrypt SSL certificates
CERTBOT_EMAIL=admin@yourdomain.com
CERTBOT_PATH=/usr/bin/certbot
CERTBOT_WEBROOT=/var/www/html

# Nginx paths (Ubuntu/Debian default)
NGINX_SITES_AVAILABLE=/etc/nginx/sites-available
NGINX_SITES_ENABLED=/etc/nginx/sites-enabled

# Frontend paths for tenant domain Nginx configs
FRONTEND_ROOT=/var/www/oltapp.isppoint.com/dist
OLT_SERVER_ROOT=/var/www/oltapp.isppoint.com/olt-polling-server

# Backend proxy settings for tenant domains
BACKEND_PROXY_HOST=127.0.0.1
BACKEND_PROXY_PORT=3001

# ==============================================
# Debug (optional)
# ==============================================
DEBUG=false
